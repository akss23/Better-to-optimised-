class Solution {
public:
    int removeDuplicates(vector<int>& nums) {
        int n=nums.size();
        vector<int> v;
        int cnt=1;
        v.push_back(nums[0]);
        for(int i=1;i<n;i++){
            if(nums[i] != nums[i-1]) {
                cnt = 1;
                v.push_back(nums[i]);
            }
            else if(cnt<2){
                v.push_back(nums[i]);
                cnt++;
            }
        }
        nums = v;
        return v.size();
    }
};
